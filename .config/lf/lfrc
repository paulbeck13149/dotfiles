# Clear text markers for different file types
set classify ' :dir:/, :exe:*, :link:@'

# Show hidden files
set hidden true

# Show file size and time in status
set info size:time

# Clear search filter when navigating
set incsearch true

# Show directory item counts
set dircounts true

# Visual separators
set drawbox true

# Toggle hidden files with . key
map . set hidden!
